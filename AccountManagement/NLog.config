<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="log/NLog.log">

  <!-- Targets -->
  <targets async="true">

    <!-- Консольный вывод -->
    <target name="console" xsi:type="ColoredConsole"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}${exception:format=ToString}" />

    <!-- Файловый вывод -->
    <target name="file" xsi:type="File"
            fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}${exception:format=ToString}"
            archiveAboveSize="10485760"
            archiveEvery="Day"
            maxArchiveFiles="30"
            keepFileOpen="false"
            concurrentWrites="true" />

    <!-- Файл ошибок -->
    <target name="errorFile" xsi:type="File"
            fileName="${basedir}/logs/errors/${shortdate}-error.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}${exception:format=ToString}"
            archiveAboveSize="5242880"
            maxArchiveFiles="60" />

  </targets>

  <!-- Rules -->
  <rules>

    <!-- Все логи в консоль и файл -->
    <logger name="*" minlevel="Trace" writeTo="console,file" />

    <!-- Ошибки в отдельный файл и базу данных -->
    <logger name="*" minlevel="Error" writeTo="errorFile" />

    <!-- Игнорировать системные логи Microsoft -->
    <logger name="Microsoft.*" minlevel="Info" writeTo="null" final="true" />

    <!-- Детальные логи для конкретного пространства имен -->
    <logger name="AccountManagement.*" minlevel="Debug" writeTo="file" />

  </rules>

</nlog>
